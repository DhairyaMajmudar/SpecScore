{
  "name": "api-scoring-app",
  "module": "index.ts",
  "version": "1.0.0",
  "description": "A lightweight application for OpenAPI spec validation",
  "author": {
    "name": "Dhairya",
    "email": "majmudar777@gmail.com"
  },
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run build && bun run dist/index.js",
    "dev": "bun --watch src/index.ts",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format --write",
    "test": "bun test"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/bun": "latest",
    "@types/js-yaml": "^4.0.9"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
